


<div class="">
<div class="container-fluid">

  <div class="row">
    <div class="col-sm-12 bg">
      <%#= image_tag(url_for(@product.image),size:"500x400",class:"img-fluid") %>
      <%=@product.description%>
    </div>

  </div>
</div>


    <h3 class="text-center pt-4">Available <%=@product.name%> Products</h3>


    <div class="container-fluid ">

      <div class="row sub_products">

        <%@product.sub_products.each do |sub|%>
        <div class="col-sm-3 py-2">
          <div class="card">
            <%= image_tag(url_for(sub.photo),class:" card-img-top img-fluid") %>
            <div class="card-body">
              <p class="card-text">
             <%= sub.name%> <br><br>
               Rated Globaly :<% sub.rating.to_i.times do  %>
               <i class="fas fa-star"></i>
               <% end %>

               </p>
            </div>

            <div class="card-footer bg-white">

              <%=link_to 'Get Order/Purchase info','',class:"btn btn-outline-info btn-sm btn-block"%>
              <!-- <button type="button" class="">Check Availability</button> -->
            </div>
          </div>
        </div>
        <%end%>
      </div>
  </div>
</div>


<div class="hero text-center">

</div>

<div class="container-fluid">
  <%= search_form_for @search do |f| %>
    <div class="d-flex justify-content-center bg-dark p-4">

      <div class="px-2">

        <%= f.label :select_category %>
        <%= f.select :product_category_id_eq, options_from_collection_for_select(ProductCategory.all.order(:name), :id, :name, @search.product_category_id_eq),{prompt: "Choose a Category"}, {class: 'form-control '} %>

      </div>
      <div class="px-2">

        <%= f.label :product_name %>
        <%= f.search_field :name_cont ,class:"form-control"%>
      </div>
      <div class="align-self-center pt-4 px-2">
       <%= f.submit 'Search Product',class:"btn btn-success"%>
      </div>

    </div>
    <% end %>


  <div class=" card spacer my-2">
    <h3>POPULAR BRAND</h3>
  </div>
  <div class=" card container-fluid section p-2">

    <div class="row">

      <% @products.each do |product|%>
    <div class="col-sm-3">

      <div class="card">




        <%#=product.product_category.name%>
          <%= image_tag(url_for(product.image),class:"card-img-top") %>

        <div class="card-body">
          <h5 class="card-title"><%= link_to product.name,product_path(product)%></h5>
          <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        </div>
        <div class="card-footer bg-white">
          <button type="button" class="btn btn-outline-secondary btn-sm btn-block">Check Availability</button>
        </div>
      </div>

    </div>
    <%end%>


    </div>
  </div>
</div>






